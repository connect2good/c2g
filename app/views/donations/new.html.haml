= row :page_message do
  .columns.small-12
    %p Buy

= row :card do
  .columns.small-12
    %p Good Description

= row :cc_name do
  = form_tag do
    .columns.small-12
      =text_field_tag :input,
        params[:input],
        placeholder: "Name on credit card",
        class: "text-field"

= row :cc_number do
  = form_tag do
    .columns.small-12
      =text_field_tag :input,
        params[:input],
        placeholder: "Credit Card Number",
        class: "text-field"

= row :cvc do
  = form_tag do
    .columns.small-3
      =text_field_tag :input,
        params[:input],
        placeholder: "CVC",
        class: "text-field"
    .columns.small-5
      =row :card do
        %p CVC pic

= row :expiration do
  = form_tag do
    .columns.small-6
      =text_field_tag :input,
        params[:input],
        placeholder: "Month",
        class: "text-field"
    .columns.small-6
      =text_field_tag :input,
        params[:input],
        placeholder: "Year",
        class: "text-field"

= row do
  .columns.small-12
    = button_tag :buy do
      Buy

