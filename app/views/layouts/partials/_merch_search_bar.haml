= form_tag merchandises_path, method: :get do
  .row.collapse
    .columns.small-10
      = text_field_tag :query, params[:query], placeholder: "What would you like to buy?", class: "search", autofocus: true
    .columns.small-2
      = button_tag :query, class: "btn btn-search postfix" do
        %icon{ class: 'fa fa-search' }