.view-page
  .large-3.small-1.columns
    %p
      \
  .large-6.small-10.columns
    %div
      .row
        %h2 Change your password
        = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
          = f.error_notification
          = f.input :reset_password_token, :as => :hidden
          = f.full_error :reset_password_token
          .form-inputs
            = f.input :password, :label => "New password", :required => true, :autofocus => true, class: "search"
            = f.input :password_confirmation, :label => "Confirm your new password", :required => true, class: "search"
          .form-actions
            = f.button :submit, "Change my password", class: "button"
        = render "devise/shared/links"
  .large-3.small-1.columns
    %p
      \